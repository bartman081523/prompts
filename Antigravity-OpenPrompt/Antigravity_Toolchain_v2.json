[
    {
        "name": "task_boundary",
        "description": "Indicate the start of a task or make an update to the current task. This tool helps track progress and state.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "TaskName": {
                    "type": "STRING",
                    "description": "Name of the task boundary. Groups steps together."
                },
                "Mode": {
                    "type": "STRING",
                    "description": "The agent focus to switch to: PLANNING, EXECUTION, or VERIFICATION."
                },
                "TaskSummary": {
                    "type": "STRING",
                    "description": "Concise summary of what has been accomplished so far."
                },
                "TaskStatus": {
                    "type": "STRING",
                    "description": "Active status of the current action (what comes next)."
                },
                "PredictedTaskSize": {
                    "type": "INTEGER",
                    "description": "Estimation of remaining tool calls needed."
                }
            },
            "required": [
                "TaskName",
                "Mode",
                "TaskSummary",
                "TaskStatus",
                "PredictedTaskSize"
            ]
        }
    },
    {
        "name": "notify_user",
        "description": "Communicate with the user. Used for questions, reviews, or completion notifications.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "Message": {
                    "type": "STRING",
                    "description": "The message to the user."
                },
                "PathsToReview": {
                    "type": "ARRAY",
                    "items": {
                        "type": "STRING"
                    },
                    "description": "List of absolute paths to files for user review."
                },
                "BlockedOnUser": {
                    "type": "BOOLEAN",
                    "description": "True if unable to proceed without user approval."
                },
                "ShouldAutoProceed": {
                    "type": "BOOLEAN",
                    "description": "True if confident to proceed without explicit feedback."
                }
            },
            "required": [
                "Message",
                "PathsToReview",
                "BlockedOnUser",
                "ShouldAutoProceed"
            ]
        }
    },
    {
        "name": "list_dir",
        "description": "List the contents of a directory (files and subdirectories).",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "DirectoryPath": {
                    "type": "STRING",
                    "description": "Absolute path to the directory."
                }
            },
            "required": [
                "DirectoryPath"
            ]
        }
    },
    {
        "name": "view_file",
        "description": "View the contents of a file from the local filesystem.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "AbsolutePath": {
                    "type": "STRING",
                    "description": "Absolute path to the file."
                },
                "StartLine": {
                    "type": "INTEGER",
                    "description": "1-indexed start line."
                },
                "EndLine": {
                    "type": "INTEGER",
                    "description": "1-indexed end line."
                }
            },
            "required": [
                "AbsolutePath"
            ]
        }
    },
    {
        "name": "write_to_file",
        "description": "Create new files or overwrite existing ones.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "TargetFile": {
                    "type": "STRING",
                    "description": "Absolute path to the target file."
                },
                "CodeContent": {
                    "type": "STRING",
                    "description": "Content to write."
                },
                "Overwrite": {
                    "type": "BOOLEAN",
                    "description": "Set to true to overwrite existing files."
                },
                "IsArtifact": {
                    "type": "BOOLEAN",
                    "description": "True if creating an artifact (plan, walkthrough, task)."
                }
            },
            "required": [
                "TargetFile",
                "CodeContent",
                "Overwrite",
                "IsArtifact"
            ]
        }
    },
    {
        "name": "replace_file_content",
        "description": "Edit a single contiguous block of text in an existing file.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "TargetFile": {
                    "type": "STRING",
                    "description": "Absolute path to the file."
                },
                "TargetContent": {
                    "type": "STRING",
                    "description": "Exact string to be replaced."
                },
                "ReplacementContent": {
                    "type": "STRING",
                    "description": "New content."
                },
                "StartLine": {
                    "type": "INTEGER",
                    "description": "Start line of the chunk."
                },
                "EndLine": {
                    "type": "INTEGER",
                    "description": "End line of the chunk."
                }
            },
            "required": [
                "TargetFile",
                "TargetContent",
                "ReplacementContent",
                "StartLine",
                "EndLine"
            ]
        }
    },
    {
        "name": "multi_replace_file_content",
        "description": "Make multiple non-contiguous edits to the same file.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "TargetFile": {
                    "type": "STRING",
                    "description": "Absolute path to the file."
                },
                "ReplacementChunks": {
                    "type": "ARRAY",
                    "items": {
                        "type": "OBJECT",
                        "properties": {
                            "TargetContent": {
                                "type": "STRING"
                            },
                            "ReplacementContent": {
                                "type": "STRING"
                            },
                            "StartLine": {
                                "type": "INTEGER"
                            },
                            "EndLine": {
                                "type": "INTEGER"
                            }
                        }
                    },
                    "description": "List of edits to apply."
                }
            },
            "required": [
                "TargetFile",
                "ReplacementChunks"
            ]
        }
    },
    {
        "name": "run_command",
        "description": "PROPOSE a command to run on behalf of the user. Operating System: linux. Shell: bash. WaitMsBeforeAsync specifies ms to run synchronously before pushing to a background task.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "CommandLine": {
                    "type": "STRING",
                    "description": "The exact command line string to execute."
                },
                "Cwd": {
                    "type": "STRING",
                    "description": "The current working directory for the command"
                },
                "SafeToAutoRun": {
                    "type": "BOOLEAN",
                    "description": "Set to true if you believe that this command is safe to run WITHOUT user approval."
                },
                "WaitMsBeforeAsync": {
                    "type": "INTEGER",
                    "description": "This specifies the number of milliseconds to wait after starting the command before sending it to the background. If you want the command to complete execution synchronously, set this to a large enough value (e.g. 5000). Keep the value as small as possible, with a maximum of 10000ms."
                }
            },
            "required": [
                "Cwd",
                "WaitMsBeforeAsync",
                "SafeToAutoRun",
                "CommandLine"
            ]
        }
    },
    {
        "name": "command_status",
        "description": "Get the status and output of a background running command.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "CommandId": {
                    "type": "STRING",
                    "description": "ID of the background command."
                },
                "WaitDurationSeconds": {
                    "type": "INTEGER",
                    "description": "Time to wait for completion."
                },
                "OutputCharacterCount": {
                    "type": "INTEGER",
                    "description": "Number of characters to return."
                }
            },
            "required": [
                "CommandId",
                "WaitDurationSeconds"
            ]
        }
    },
    {
        "name": "send_command_input",
        "description": "Send standard input to a running background command or terminate it.",
        "parameters": {
            "type": "OBJECT",
            "properties": {
                "CommandId": {
                    "type": "STRING",
                    "description": "The command ID from a previous run_command call."
                },
                "Input": {
                    "type": "STRING",
                    "description": "The input to send to the command's stdin. Include newline characters if needed."
                },
                "SafeToAutoRun": {
                    "type": "BOOLEAN",
                    "description": "Set to true if you believe that this command is safe to run WITHOUT user approval."
                },
                "Terminate": {
                    "type": "BOOLEAN",
                    "description": "Whether to terminate the command. Exactly one of input and terminate must be specified."
                },
                "WaitMs": {
                    "type": "INTEGER",
                    "description": "Amount of time to wait for output after sending input (500ms to 10000ms)."
                }
            },
            "required": [
                "CommandId",
                "WaitMs",
                "SafeToAutoRun"
            ]
        }
    },
